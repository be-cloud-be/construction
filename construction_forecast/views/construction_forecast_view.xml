<odoo>

    <record model="ir.actions.act_window" id="action_orders_forecast">
        <field name="name">Forecast</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">kanban,tree,graph,pivot,form,calendar</field>
        <field name="domain">[('qty_delivered','=', 0)]</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('sale.view_order_line_tree')}),
                      (0, 0, {'view_mode': 'form'}),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_order_line_kanban_view_forecast')}),
                      (0, 0, {'view_mode': 'pivot'}),
                      (0, 0, {'view_mode': 'graph'})]"/>
        <field name="search_view_id" ref="sale.view_sales_order_line_filter"/>
    </record>
    
    <record id="view_order_line_kanban_view_forecast" model="ir.ui.view">
        <field name="name">sale.order.line.kanban.forecast</field>
        <field name="model">sale.order.line</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <kanban default_group_by="date_forecast:month" class="o_kanban_small_column o_saler_order_kanban" create="false">
                <field name="date_forecast" options='{"group_by_tooltip": {"requirements": "Description", "legend_priority": "Use of stars"}}'/>
                <field name="color"/>
                <field name="priority"/>
                <field name="salesman_id"/>
                <field name="price_subtotal"/>
                <field name="date_forecast"/>
                <field name="order_partner_id"/>
                <field name="currency_id"/>

                <progressbar field="date_forecast:month" colors='{"planned": "success", "today": "warning", "overdue": "danger"}' sum_field="price_subtotal"/>
                <templates>
                    <field name="date_forecast"/>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">

                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <li t-if="record.active.value"><a name="action_deliver_line" type="object">Deliver</a></li>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title"><field name="order_partner_id"/></strong> - <field name="name"/>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle">
                                    <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.salesman_id.raw_value)" t-att-title="record.salesman_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="menu_sale_order_forecast"
        action="action_orders_forecast"
        parent="sale.menu_sale_invoicing"
        sequence="10"/>
        
</odoo>